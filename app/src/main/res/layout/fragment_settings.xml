<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".SettingsFragment">


    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:orientation="vertical"
         android:layout_height="wrap_content">
         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/settings_profile_image"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:layout_marginStart="8dp"
             android:layout_marginTop="40dp"
             android:layout_marginEnd="8dp"
             android:src="@drawable/profile"
             app:civ_border_color="#000"
             app:civ_border_width="2dp"
             />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/input"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:id="@+id/ll1"
             android:paddingStart="16sp"
             android:layout_marginEnd="16dp"
             android:orientation="vertical"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/settings_profile_image">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:text="Profile status"
                 android:textSize="10dp"/>
             <EditText
                 android:id="@+id/settings_profile_status"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:layout_marginStart="8sp"
                 android:background="@drawable/input"
                 android:layout_marginEnd="16sp"
                 android:textSize="18sp"
                 android:hint="Profile Status"
                 />
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/ll2"
            android:paddingStart="16sp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="user name"
                android:textSize="10dp"/>
            <EditText
                android:id="@+id/settings_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="8sp"
                android:background="@drawable/input"
                android:layout_marginEnd="16sp"
                android:textSize="18sp"
                android:hint="user name"
                />
        </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/input"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:id="@+id/ll3"
             android:paddingStart="16sp"
             android:layout_marginEnd="16dp"
             android:orientation="vertical"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/ll2">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:text="full name"
                 android:textSize="10dp"/>
             <EditText
                 android:id="@+id/settings_user_fullname"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:layout_marginStart="8sp"
                 android:background="@drawable/input"
                 android:layout_marginEnd="16sp"
                 android:textSize="18sp"
                 android:hint="full name"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/input"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:id="@+id/ll4"
             android:paddingStart="16sp"
             android:layout_marginEnd="16dp"
             android:orientation="vertical"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/ll3">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:text="country"
                 android:textSize="10dp"/>
             <EditText
                 android:id="@+id/settings_user_country"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:layout_marginStart="8sp"
                 android:background="@drawable/input"
                 android:layout_marginEnd="16sp"
                 android:textSize="18sp"
                 android:hint="country"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/input"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:id="@+id/ll5"
             android:paddingStart="16sp"
             android:layout_marginEnd="16dp"
             android:orientation="vertical"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/ll4">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:text="Date of Birth"
                 android:textSize="10dp"/>
             <EditText
                 android:id="@+id/settings_dob"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:layout_marginStart="8sp"
                 android:background="@drawable/input"
                 android:layout_marginEnd="16sp"
                 android:textSize="18sp"
                 android:hint="Date of Birth"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/input"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:id="@+id/ll6"
             android:paddingStart="16sp"
             android:layout_marginEnd="16dp"
             android:orientation="vertical"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/ll5">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:text="gender"
                 android:textSize="10dp"/>
             <EditText
                 android:id="@+id/settings_gender"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:layout_marginStart="8sp"
                 android:background="@drawable/input"
                 android:layout_marginEnd="16sp"
                 android:textSize="18sp"
                 android:hint="gender"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/input"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:id="@+id/ll7"
             android:paddingStart="16sp"
             android:layout_marginEnd="16dp"
             android:orientation="vertical"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/ll6">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:text="Relation Ship Status"
                 android:textSize="10dp"/>
             <EditText
                 android:id="@+id/settings_relation_status"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:layout_marginStart="8sp"
                 android:background="@drawable/input"
                 android:layout_marginEnd="16sp"
                 android:textSize="18sp"
                 android:hint="Relation Ship Status"
                 />
         </LinearLayout>

        <Button
            android:id="@+id/settings_update_btn"
            android:layout_width="match_parent"
            android:background="@drawable/button"
            android:text="Update"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="16sp"
            android:layout_height="wrap_content"/>
     </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>